{
  "name": "srms-backend",
  "version": "1.0.0",
  "description": "Backend API for Nepal National School Result Management System",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "migrate": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "seed": "npx prisma db seed",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma db studio",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "build": "echo 'No build step required for Node.js'",
    "validate": "npm run lint && npm run test"
  },
  "prisma": {
    "seed": "node src/scripts/seed_initial_data.js"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.10",
    "pdfkit": "^0.13.0",
    "prisma": "^5.1.1",
    "qrcode": "^1.5.3",
    "redis": "^4.6.12",
    "sharp": "^0.32.4",
    "uuid": "^9.0.0",
    "validator": "^13.9.0",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@types/jest": "^29.5.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "nodejs",
    "express",
    "prisma",
    "postgresql",
    "school",
    "result",
    "management",
    "system",
    "nepal",
    "education",
    "api",
    "rest"
  ],
  "author": {
    "name": "SRMS Development Team",
    "email": "dev@srms.edu.np"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/srms.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/srms/issues"
  },
  "homepage": "https://github.com/your-org/srms#readme",
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/src/**/__tests__/**/*.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ext": "js,json",
    "ignore": [
      "src/uploads/*",
      "node_modules/",
      "tests/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}
